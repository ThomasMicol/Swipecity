<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="600dp"
            tools:layout_editor_absoluteX="284dp" android:id="@+id/button"/>
    <Button
            android:text="Decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="600dp"
            tools:layout_editor_absoluteX="45dp" android:id="@+id/button3"/>
    <TextView
            android:layout_width="135dp"
            android:layout_height="38dp" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="114dp" android:id="@+id/textView"/>
    <Button
            android:text="Next"
            android:layout_width="47dp"
            android:layout_height="442dp" tools:layout_editor_absoluteY="102dp"
            tools:layout_editor_absoluteX="348dp" android:id="@+id/button4"/>
    <Button
            android:text="Prev"
            android:layout_width="47dp"
            android:layout_height="442dp" tools:layout_editor_absoluteY="102dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/button5"/>

</android.support.constraint.ConstraintLayout>